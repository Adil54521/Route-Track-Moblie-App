<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:id="@+id/scanResultLayout">

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Дата"
        android:textSize="16sp"
        android:padding="8dp"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/invoiceNumberEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Invoice Number"
        android:inputType="text" />

    <TextView
        android:id="@+id/amountEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Amount"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/afterDeliveryAmountEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="After Delivery Amount"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/discountAmountEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Discount Amount"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/paymentOptionsSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:entries="@array/payment_options"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/selectedPaymentTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Выбранный способ"
        android:textSize="14sp"
        android:gravity="center" />

    <CheckBox
        android:id="@+id/deliveryStatusCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Доставлено" />


</LinearLayout>
